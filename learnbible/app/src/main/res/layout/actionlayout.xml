<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="right|center"
    >

    <LinearLayout
        android:id="@+id/ll_XP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_18"
        android:layout_toStartOf="@+id/ll_coronas"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ab_ivXP"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:clickable="true"
            android:src="@drawable/icon_xp"
            android:tint="@color/colorNaranja"
            />

        <TextView
            android:id="@+id/ab_tvXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/colorBlanco"
            android:textSize="@dimen/size_12" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_coronas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_18"
        android:layout_toStartOf="@+id/ll_perfil"

        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ab_ivCorona"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:clickable="true"
            android:src="@drawable/icon_corona" />

        <TextView
            android:id="@+id/ab_tvCorona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_3"
            android:text="1k"
            android:textSize="@dimen/size_10"
            android:textColor="@color/colorBlanco"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dimen_12"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ab_ivProfiles"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_profile" />

    </LinearLayout>

</RelativeLayout>