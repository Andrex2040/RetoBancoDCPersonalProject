<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="@dimen/dimen_100"
            android:id="@+id/profile_image"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_100"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher" />




        <Button
            android:id="@+id/perfilName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="Hola"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconTint="@color/colorNegro"
            app:iconSize="@dimen/dimen_24"

            style="@style/Widget.MaterialComponents.Button.TextButton"
            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="@dimen/dimen_240"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/salir"
            android:layout_width="@dimen/dimen_240"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/cerrar_sesion"
            app:layout_constraintBottom_toBottomOf="@+id/lv_home_historias"

            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>